object Host "<%= @title %>" {

<%# In repository mode we don't define any variables, checks are performed on the agent -%>
<% if @repository -%>
  import "satellite-host";
<%# If the agent is directly connected to this zone, check the connection -%>
<% if @parent_fqdn == @fqdn -%>
  check_command = "cluster-zone"
<%# If the agent is not directly connected to this zone delegate the check to the satellite -%>
<% else -%>
  check_command = "dummy"
  zone = "<%= @parent_fqdn %>"
<% end -%>
<% else -%>
  import "generic-host";

  address = "<%= @address %>"
<% @vars.each do |key, value| -%>

  vars.<%= key %> = "<%= value %>"
<% end -%>
<% end -%>

}

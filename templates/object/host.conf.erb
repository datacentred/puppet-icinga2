
object Host "<%= @title %>" {
<% if @import -%>
  import "<%= @import %>"
<% end -%>
<% if @display_name -%>
  display_name = "<%= @display_name %>"
<% end -%>
<% if @check_command -%>
  check_command = "<%= @check_command %>"
<% end -%>
<% if @address -%>
  address = "<%= @address %>"
<% end -%>
<% @vars.each do |key, value| -%>
  vars.<%= key %> = <%= scope.function_icinga2_config_value([value]) %>
<% end -%>
<% if @zone -%>
  zone = "<%= @zone %>"
<% end -%>
<% if @icon_image -%>
  icon_image = "<%= @icon_image %>"
<% end -%>
}

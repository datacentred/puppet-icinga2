
object Host "<%= @title %>" {
<% if @import -%>
  import "<%= @import %>"
<% end -%>
<% if @check_command -%>
  check_command = "<%= @check_command %>"
<% end -%>
<% if @address -%>
  address = "<%= @address %>"
<% end -%>
<% @vars.each do |key, value| -%>
<% if value == true || value == false || value.is_a?(Integer) -%>
  vars.<%= key %> = <%= value %>
<% else -%>
  vars.<%= key %> = "<%= value %>"
<% end -%>
<% end -%>
<% if @icon_image -%>
  icon_image = "<%= @icon_image %>"
<% end -%>
}

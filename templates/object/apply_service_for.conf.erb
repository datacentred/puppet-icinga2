
apply Service "<%= @title %>" for (<%= @key %> => <%= @value %> in <%= @hash %>) {
<% if @import -%>
  import "<%= @import %>"
<% end -%>
<% if @check_command -%>
  check_command = "<%= @check_command %>"
<% end -%>
<% if @display_name -%>
  display_name = <%= scope.function_icinga2_config_value([@display_name]) %>
<% end -%>
<% if @vars -%>
  <%- @vars.each do |key, value| -%>
  vars.<%= key %> = <%= scope.function_icinga2_config_value([value, @key, @value]) %>
  <%- end -%>
<% end -%>
<% if @zone -%>
  zone = <%= scope.function_icinga2_config_value([@zone]) %>
<% end -%>
<% if @assign_where -%>
  assign where <%= @assign_where %>
<% end -%>
<% if @ignore_where -%>
  ignore where <%= @ignore_where %>
<% end -%>
}

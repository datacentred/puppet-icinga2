
object CheckCommand "<%= @title %>" {
  import "plugin-check-command"
  command = [ <%= Array(@command).join(', ') %> ]
<% if @arguments -%>
  arguments = {
  <%- @arguments.each do |key, value| -%>
    <%- if value.is_a?(Hash) -%>
    "<%= key %>" = {
      <%- value.each do |argkey, argvalue| -%>
      <%= argkey %> = "<%= argvalue %>"
      <%- end -%>
    }
    <%- else -%>
    "<%= key %>" = "<%= value %>"
    <%- end -%>
  <%- end -%>
  }
<% end -%>
<% if @vars -%>
  <%- @vars.each do |key, value| -%>
    <%- if value == true || value == false || value.is_a?(Integer) -%>
  vars.<%= key %> = <%= value %>
    <%- else -%>
  vars.<%= key %> = "<%= value %>"
    <%- end -%>
  <%- end -%>
<% end -%>
}
